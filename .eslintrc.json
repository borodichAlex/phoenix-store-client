{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "airbnb-base",
        "airbnb-typescript/base"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "import/prefer-default-export": "off",  // https://google.github.io/styleguide/tsguide.html#exports
        "no-console": ["warn", { "allow": ["warn", "error"] }]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "plugins": ["prettier"],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {
        "prettier/prettier": "warn"
      }
    }
  ]
}
